# MongoDB Configuration (REQUIRED for production)
# Get from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
MONGO_URI=https://www.mongodb.com/cloud/atlas
# Application Configuration
NODE_ENV=development
PORT=5001

# Authentication & Security (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Amadeus API (REQUIRED for flight search)
# Get from: https://developers.amadeus.com/
AMADEUS_CLIENT_ID=your-amadeus-client-id
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret

# Email Service for Password Reset (REQUIRED)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Cloud Storage - Cloudinary (REQUIRED for image uploads)
# Get from: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# CORS Configuration (REQUIRED for production)
CLIENT_URL=http://localhost:5173

# Optional: Stripe for payments
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
